{
  "name": "vyapardost-backend",
  "version": "1.0.0",
  "description": "Vayapardost backend",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc",
    "prelocal": "npm run build",
    "local": "cross-env NODE_ENV=local concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "predev": "npm run build",
    "dev": "cross-env NODE_ENV=development node dist/index.js",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "husky-setup": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vyapardost/vyapardost-backend.git"
  },
  "author": "Devesh Verma",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Vyapardost/vyapardost-backend/issues"
  },
  "homepage": "https://github.com/Vyapardost/vyapardost-backend#readme",
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@types/jest": "^29.4.0",
    "body-parser": "^1.20.1",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "jest": "^29.4.1",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5"
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "eslint . --fix",
      "prettier --write ."
    ]
  }
}